#!/bin/bash
set -e
set -o pipefail

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
USER_ID=$(id -u ${USER})
GROUP_ID=$(id -g ${USER})
IMAGE="node:9-alpine"

docker container run -it --rm \
    -v ${DIR}/../:/var/www \
    -w /var/www \
    -u ${USER_ID}:${GROUP_ID} \
    ${IMAGE} npm install

docker container run -it --rm \
    -v ${DIR}/../:/var/www \
    -w /var/www \
    -u ${USER_ID}:${GROUP_ID} \
    ${IMAGE} npm run build
